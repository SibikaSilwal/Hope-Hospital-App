<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="10dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#F8F8FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/doctor_avatar"
            android:id="@+id/imgplaceholderDoc"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/t_DocName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_toRightOf="@+id/imgplaceholderDoc"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/t_DocPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:layout_toRightOf="@+id/imgplaceholderDoc"
            android:layout_below="@+id/t_DocName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/t_DocEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_toRightOf="@+id/imgplaceholderDoc"
            android:layout_below="@+id/t_DocPhone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>