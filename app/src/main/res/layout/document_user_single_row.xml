<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/pdficon"
            android:id="@+id/i_pdfthumb3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t_UserFileName"
            android:text="File Name"
            android:layout_toRightOf="@+id/i_pdfthumb3"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t_UserFileMessage"
            android:text="No message with File"
            android:layout_toRightOf="@+id/i_pdfthumb3"
            android:layout_below="@+id/t_UserFileName"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>