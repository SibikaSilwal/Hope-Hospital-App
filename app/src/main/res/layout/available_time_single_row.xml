<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttongray"
        android:padding="15dp">

        <TextView
            android:id="@+id/t_AvailDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textColor="@color/heading2" />

        <TextView
            android:id="@+id/t_availTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_AvailDay"
            android:text="Time"
            android:textColor="@color/heading2" />

        <TextView
            android:id="@+id/t_reminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_availTime"
            android:text="Reminder Time"
            android:textColor="@color/heading2"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>